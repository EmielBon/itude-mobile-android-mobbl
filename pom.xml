<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.itude.poms</groupId>
		<artifactId>itude-hudson</artifactId>
		<version>1.1</version>
	</parent>
	<groupId>com.itude.mobile.android.mobbl</groupId>
	<artifactId>mobbl-core</artifactId>
	<version>0.0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>Android Mobbl Core</name>
	<description>Android Mobbl Core</description>
	<url>http://www.itude.com</url>
	<inceptionYear>2011</inceptionYear>
	<developers>
		<developer>
			<name>Wiebe Elsinga</name>
			<id>w.elsinga</id>
			<roles>
				<role>Developer</role>
				<role>Contributor</role>
			</roles>
		</developer>
	</developers>
	
	<properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
	
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>com.google.android</groupId>
				<artifactId>android</artifactId>
				<version>2.1_r1</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
	
	<modules>
		<module>itude-mobile-android-mobbl-core-lib</module>
	</modules>
	
	<scm>
		<connection>scm:svn:http://repo.itude.com/repos/mobbl-client/itude-mobile-android-mobbl/trunk</connection>
		<developerConnection>scm:svn:http://repo.itude.com/repos/mobbl-client/itude-mobile-android-mobbl/trunk</developerConnection>
		<url>http://svn/repo.itude.com/repos/mobbl-client/itude-mobile-android-mobbl/trunk</url>
	</scm>

	<build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>com.jayway.maven.plugins.android.generation2</groupId>
                    <artifactId>maven-android-plugin</artifactId>
                    <configuration>
						<sdk>
							<platform>7</platform>
						</sdk>
                    </configuration>
					<extensions>true</extensions>
				</plugin>
            </plugins>
        </pluginManagement>
    </build>
    
</project>


          